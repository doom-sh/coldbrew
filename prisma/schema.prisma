generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Session {
  id          String   @id @default(uuid())
  accessToken String?  @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  casks Cask[]
}

model Cask {
  id             String   @id
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  name           String?
  homepage       String?
  logoUrl        String?
  ranking        Int?
  installCount   String?
  installPercent String?

  sessions Session[]
}
